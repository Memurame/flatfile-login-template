{% extends 'auth/app.twig' %}

{% block content %}
  <div class="login-form">
    <form method="post">
      {{ csrf.field | raw }}
      <h2 class="text-center">Passwort zurücksetzen</h2>
      <div class="form-group has-error">
        <input type="text" class="form-control" name="password" placeholder="Neues Passwort" required="required">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Speichern</button>
      </div>
    </form>
    <p class="text-center small"><a href="{{ path_for('auth.login') }}">zurück zum Login</a></p>
  </div>

{% endblock %}
