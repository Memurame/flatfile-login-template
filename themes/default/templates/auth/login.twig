{% extends 'auth/app.twig' %}

{% block content %}
  <div class="login-form">
    <form method="post">
      {{ csrf.field | raw }}
      <h2 class="text-center">{{ trans('login.title.login') }}</h2>
      {% include 'message/inline.twig' %}
      <div class="form-group">
        <input type="text" class="form-control {{ errors.username ? ' is-invalid' : '' }}" name="username" placeholder="{{ trans('login.form.username') }}" required="required" value="{{ old.username }}">
        <div class="invalid-feedback">{{ errors.username | first }}</div>

      </div>
      <div class="form-group">
        <input type="password" class="form-control {{ errors.password ? ' is-invalid' : '' }}" name="password" placeholder="{{ trans('login.form.password') }}" required="required">
        <div class="invalid-feedback">{{ errors.password | first }}</div>
      </div>
      {{ captcha.form|raw }}
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block">{{ trans('login.button.login') }}</button>
      </div>
      <p><a href="{{ path_for('auth.forgot') }}">{{ trans('login.link.forgot') }}</a></p>
    </form>
    {% if setting.sys.system.register %}
      <p class="text-center small">{{ trans('login.text.noacc') }} <a href="{{ path_for('auth.register') }}">{{ trans('login.link.register') }}</a></p>
    {% endif %}
  </div>

{% endblock %}
